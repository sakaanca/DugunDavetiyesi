@model IEnumerable<Dugun_davetiyesi.Models.Cevap>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Törene Katılanlar</title>
    
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="text-center p-2">
        <h3>Törene Katılanların Listesi</h3>
        <table class="table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Dugun_davetiyesi.Models.Cevap x in Model)
                {
                    <tr>
                        <td>@x.Ad</td>
                        <td>@x.SoyAd</td>
                        <td>@x.Email</td>
                        <td>@x.Telefon</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
   
    <style>
        th, td {
            text-align: center;
        }
    </style>
</body>
</html>
